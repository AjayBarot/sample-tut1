<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span6">
    <section>
      <h1>
        <%= image_tag @user.image_url(:thumb).to_s %>
        <%= @user.name %>
        <%= @user.phone_no %>
      </h1>
    </section>
    <section>
    	<%= render 'shared/stats' %> 
    </section>
  </aside>
<div class="span8">
<%= render 'follow_form' if signed_in? %>
<% if @user.microposts.any? %>
<h3>Posts (<%= @user.microposts.count %>)</h3>
<ol class="microposts">
  <%= render @microposts %>
</ol>
<%= will_paginate @microposts %>
<% end %>
</div>
</div>